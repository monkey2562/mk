<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mk.lottery.ui.SsqSearchActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:gravity="center_vertical|center_horizontal"
        android:background="@drawable/title_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="22sp"
            android:text="@string/main"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >
            <Button
                android:id="@+id/btn_ssq_search_01"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:background="@drawable/ball_gray"
                android:text="01"
                android:textSize="30sp"
                android:textColor="@color/redBall"
                />
            <Button
                android:id="@+id/btn_ssq_search_02"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:background="@drawable/ball_gray"
                android:text="02"
                android:textSize="30sp"
                android:textColor="@color/redBall"
                />
            <Button
                android:id="@+id/btn_ssq_search_03"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:background="@drawable/ball_gray"
                android:text="03"
                android:textSize="30sp"
                android:textColor="@color/redBall"
                />
            <Button
                android:id="@+id/btn_ssq_search_04"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:background="@drawable/ball_gray"
                android:text="04"
                android:textSize="30sp"
                android:textColor="@color/redBall"
                />
            <Button
                android:id="@+id/btn_ssq_search_05"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:background="@drawable/ball_gray"
                android:text="05"
                android:textSize="30sp"
                android:textColor="@color/redBall"
                />
            <Button
                android:id="@+id/btn_ssq_search_06"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:background="@drawable/ball_gray"
                android:text="06"
                android:textSize="30sp"
                android:textColor="@color/redBall"
                />
            <Button
                android:id="@+id/btn_ssq_search_07"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:background="@drawable/ball_gray"
                android:text="07"
                android:textSize="30sp"
                android:textColor="@color/blueBall"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="此注彩票曾经中过："
            android:textSize="22sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一等奖500万元"
            android:textSize="22sp"
            android:textColor="@color/redBall"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开奖期为："
                android:textSize="22sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014062"
                android:textSize="22sp"
                android:textColor="@color/redBall"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开奖号码为："
                android:textSize="22sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.02.03.04.05.06.07"
                android:textSize="22sp"
                android:textColor="@color/redBall"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
