<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.mk.lottery.ui.SsqSearchActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="此注彩票曾经中过："
            android:textSize="22sp"/>
        <TextView
            android:id="@+id/tvSsqSearch01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="一等奖500万元"
            android:textSize="22sp"
            android:textColor="@color/redBall"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开奖期为："
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/tvSsqSearch02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2014062"
                android:textSize="22sp"
                android:textColor="@color/redBall"/>
            </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开奖号码为："
                android:textSize="22sp"/>
            <TextView
                android:id="@+id/tvSsqSearch03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="01.02.03.04.05.06.07"
                android:textSize="22sp"
                android:textColor="@color/redBall"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
